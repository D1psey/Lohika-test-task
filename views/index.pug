meta(charset='utf-8')
meta(name='viewport' content='initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width, user-scalable=no, minimal-ui')
link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')

nav.navbar.navbar-expand-lg.navbar-white.bg-light
	.navbar-brand.mr-auto.task-list
		span.my-sm-2 Buttons  	
	.login-nav-data
	if(loggedin)
		.btn-group
			if(isAdmin)
				.btn.btn-warning.btn-admin-panel
					a(href='/admin') Admin panel
			.btn.btn-warning= username
			a.btn.btn-warning.logout-btn(href='./logout') Logout
	else	
		.btn-group
			a.btn.bg-warning(href='./login') Login
			a.btn.bg-warning(href='./register') Register

.buttons-container.d-flex.justify-content-around
	if(loggedin)
		.btn-group
			button.btn.btn-success.btn-data(data-id='button1_number') Button 1
			.btn.btn-secondary.button1_count= button1_number 
		.btn-group
			button.btn.btn-success.btn-data(data-id='button2_number') Button 2
			.btn.btn-secondary.button2_count= button2_number
		.btn-group
			button.btn.btn-success.btn-data(data-id='button3_number') Button 3
			.btn.btn-secondary.button3_count= button3_number
		input.hidden-email(type='hidden' value= email)

h1.timer-container.d-flex.justify-content-center

script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
